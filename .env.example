# Copy this file to .env and update with your values
# These environment variables will override the defaults in docker-compose.yml

# n8n Authentication (CHANGE THESE FOR PRODUCTION!)
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here

# n8n Host Configuration
# Development (local)
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Production (uncomment and modify for production deployment)
# N8N_HOST=your-domain.com
# N8N_PORT=5678
# N8N_PROTOCOL=https
# N8N_PUSH_BACKEND=websocket
# N8N_PROXY_HOPS=1
# N8N_EDITOR_URL=https://your-domain.com/
# WEBHOOK_URL=https://your-domain.com/

# Production Security & Performance (uncomment for production)
# N8N_SECURE_COOKIE=true
# N8N_LOG_LEVEL=warn
# N8N_METRICS=true
# N8N_DIAGNOSTICS_ENABLED=false

# Timezone (optional - adjust to your location)
# GENERIC_TIMEZONE=UTC
# GENERIC_TIMEZONE=America/New_York
# GENERIC_TIMEZONE=Europe/London
# GENERIC_TIMEZONE=Asia/Singapore

# Examples for different deployment scenarios:
# 
# Local Development:
# N8N_HOST=localhost
# N8N_PROTOCOL=http
#
# Production with Custom Domain:
# N8N_HOST=n8n.yourdomain.com
# N8N_PROTOCOL=https
# N8N_SECURE_COOKIE=true
# N8N_PUSH_BACKEND=websocket
#
# Production with Subdirectory:
# N8N_HOST=yourdomain.com
# N8N_PROTOCOL=https
# N8N_EDITOR_URL=https://yourdomain.com/n8n/
# WEBHOOK_URL=https://yourdomain.com/n8n/